<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Login Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Label Text="User Name (Email)"/>
            <Entry x:Name="Email" Placeholder="Email"/>
            
            <Label Text="Password"/>
            <Entry x:Name="Password" Placeholder="Password"/>

            <Button Text="Submit" Clicked="SubmitBtnClicked"/>
            <Button Text="Not Registerd?" Clicked="RegBtnClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>