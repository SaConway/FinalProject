<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="דף התחברות" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            
            <Label Text="שם משתמש (אימייל)" HorizontalOptions="End" Margin="5"/>
            <Entry x:Name="Email" Placeholder="אימייל" HorizontalTextAlignment="End"/>
            
            <Label Text="סיסמא" HorizontalOptions="End" Margin="5"/>
            <Entry x:Name="Password" Placeholder="סיסמא" HorizontalTextAlignment="End"/>

            <Button Text="התחבר" Clicked="SubmitBtnClicked"/>
            <Button Text="לא רשום?" Clicked="RegBtnClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>