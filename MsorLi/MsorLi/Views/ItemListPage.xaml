<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.ItemListPage"
             Title="מסור-לי">

    <ContentPage.Content>
       
        <StackLayout>

            <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="#2196F3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="כל המוצרים" TextColor="White" BackgroundColor="Transparent" HorizontalOptions="CenterAndExpand" Grid.Column="0"/>

                <SearchBar Placeholder="חיפוש.." HorizontalTextAlignment="End" Grid.Column="1"/>

                <Button Text="תפריט" TextColor="White" BackgroundColor="Transparent" Grid.Column="2" Clicked="OpenMenu"/>
                
            </Grid>
            
            <Button HorizontalOptions="FillAndExpand" Clicked="AddItem_EventClick" Text="Add" TextColor="Black"/>
            
            <ActivityIndicator IsVisible="False" IsEnabled="True" x:Name="syncIndicator"/>

            <ListView x:Name="listView_items" IsPullToRefreshEnabled="true" Refreshing="OnRefresh" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate >    
                        <ViewCell>

                            <Grid RowSpacing="0" ColumnSpacing="0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Aspect="AspectFill" Margin="0,0,2,4" Source="{Binding Item1}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item2}">
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Grid.Column="1" Aspect="AspectFill" Margin="2,0,0,4" Source="{Binding Item3}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item4}" >
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                            </Grid>

                        </ViewCell>
                    
                    </DataTemplate>
                </ListView.ItemTemplate>    
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>