<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.ItemListPage"
             Title="מסור-לי">
    
    <ContentPage.Content>
        
       
        <StackLayout>
            <Grid VerticalOptions="FillAndExpand" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <BoxView Color="#4286f4" Grid.Row="0" Grid.ColumnSpan="3" Scale="2"/>
                
                <Button Text="main page" TextColor="White" HorizontalOptions="CenterAndExpand" Grid.Column="0"/>

                <SearchBar Placeholder="search" Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent" VerticalOptions="CenterAndExpand"/>

                <Button Text="Menu" TextColor="White" Grid.Row="0" Grid.Column="2" Clicked="OpenMenu"/>
                
            </Grid>
            <ActivityIndicator IsVisible="False" IsEnabled="True" x:Name="syncIndicator"/>

        <ListView x:Name="listView_items" IsPullToRefreshEnabled="true" Refreshing="OnRefresh" RowHeight="150" ItemSelected="OnSelection">
            <ListView.ItemTemplate>
                <DataTemplate >    
                    <ViewCell>
                        <StackLayout BackgroundColor="#eee" Orientation="Vertical">
                            <StackLayout Orientation="Horizontal" >
                                <StackLayout WidthRequest="60" HeightRequest="60">
                                    <Image Source="{Binding Url}" />
                                </StackLayout>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Date}" TextColor="#f35e20"  />
                                    <Label Text="{Binding Title}" TextColor="#f35e20"  />
                                    <Label Text="{Binding Condition}" TextColor="#f35e20"/>
                                    <Label Text="{Binding Location}" TextColor="#f35e20"/>
                                    <Label Text="{Binding ViewCounter}" TextColor="#f35e20"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>