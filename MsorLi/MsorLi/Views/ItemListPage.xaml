<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.ItemListPage"
             xmlns:controls="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             Title="מסור-לי">
    
    <!-- Padding for ios status bar -->
     <ContentPage.Padding>
            <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    
    <ContentPage.Content>

        <AbsoluteLayout>
            
            <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Spacing="0">

                <!--ToolBar-->
                <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="#00BCD4" Padding="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Search-->
                    <Image Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center"
                            Source="search.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer>
                            </TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="Center">

                        <!--MsorLi-->
                        <Label Text="מסור-לי" TextColor="White" FontSize="Large" Margin="0,0,15,0"
                               VerticalTextAlignment="Center" VerticalOptions="Center" HorizontalTextAlignment="End">
                            <Label.FontFamily>
                                <OnPlatform x:TypeArguments="x:String">
                                    <On Platform="Android" Value="Arimo-Regular.ttf#Arimo-Regular" />
                                </OnPlatform>
                            </Label.FontFamily>
                        </Label>

                        <!--Menu-->
                        <Image HorizontalOptions="Center" VerticalOptions="Center"
                            Source="menu.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OpenMenu">
                                </TapGestureRecognizer>
                            </Image.GestureRecognizers>
                        </Image>

                    </StackLayout>

                </Grid>

                <ActivityIndicator IsVisible="False" IsEnabled="True" x:Name="syncIndicator"/>

                <!--List Of Images-->
                <ListView x:Name="listView_items" IsPullToRefreshEnabled="true" Refreshing="OnRefresh"
                          SeparatorVisibility="None" RowHeight="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <Grid RowSpacing="0" ColumnSpacing="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Aspect="AspectFill" Margin="0,6,3,0" Source="{Binding Item1}">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item2}">
                                            </TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image Grid.Column="1" Aspect="AspectFill" Margin="3,6,0,0" Source="{Binding Item3}">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item4}" >
                                            </TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>

                                </Grid>

                            </ViewCell>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <!--Add Button-->
            
            
            <!--<controls:FloatingActionButton AbsoluteLayout.LayoutBounds="1,1,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional"
                                           Image="add.png" HorizontalOptions="Center" VerticalOptions="Center"
                                           Clicked="AddItem_EventClick" ButtonColor="#00BCD4"/>-->

            <Button BorderRadius="20" AbsoluteLayout.LayoutBounds="0.5,1,-1,-1"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    FontAttributes="Bold" FontSize="Medium"
                    Text="פרסום מוצר" Clicked="AddItem_EventClick" 
                    BackgroundColor="#CDDC39" Margin="15" TextColor="White">
                <Button.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Arimo-Regular.ttf#Arimo-Regular" />
                    </OnPlatform>
                </Button.FontFamily>
            </Button>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>