<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.ItemListPage"
             Title="מסור-לי">

    <ContentPage.Content>
    <StackLayout>
        <ActivityIndicator IsVisible="False" IsEnabled="True" x:Name="syncIndicator"/>

            <ListView x:Name="listView_items" IsPullToRefreshEnabled="true" Refreshing="OnRefresh" HasUnevenRows="True" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate >    
                        <ViewCell>

                            <Grid RowSpacing="0" ColumnSpacing="0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Aspect="AspectFill" Margin="0,0,2,4" Source="{Binding Item1}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item2}">
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Grid.Column="1" Aspect="AspectFill" Margin="2,0,0,4" Source="{Binding Item3}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item4}" >
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                            </Grid>

                    </ViewCell>
                    
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>