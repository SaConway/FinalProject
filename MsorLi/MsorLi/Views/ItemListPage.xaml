<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MsorLi.Views.ItemListPage"
             xmlns:controls="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             Title="מסור-לי">
    
    <!-- Padding for ios status bar -->
     <ContentPage.Padding>
            <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    
    <ContentPage.Content>

        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            
            <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Spacing="0">

                <!--ToolBar-->
                <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="#00BCD4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--Go To Top-->
                    <Image Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center"
                            Source="top.png" Margin="10,0,10,0" BackgroundColor="Transparent">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer>
                            </TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <!--Search-->
                    <SearchBar Placeholder="חיפוש.." HorizontalTextAlignment="End" Grid.Column="1" 
                                PlaceholderColor="White" TextColor="White" CancelButtonColor="White"
                                HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                                BackgroundColor="Transparent"/>

                    <!--Menu-->
                    <Image Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" 
                            Source="menu.png" Margin="10,0,10,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OpenMenu">
                            </TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>

                <ActivityIndicator IsVisible="False" IsEnabled="True" x:Name="syncIndicator"/>

                <!--List Of Images-->
                <ListView x:Name="listView_items" IsPullToRefreshEnabled="true" Refreshing="OnRefresh"
                          SeparatorVisibility="None" RowHeight="200">
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <ViewCell>

                                <Grid RowSpacing="0" ColumnSpacing="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Aspect="AspectFill" Margin="0,4,2,0" Source="{Binding Item1}">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item2}">
                                            </TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image Grid.Column="1" Aspect="AspectFill" Margin="2,4,0,0" Source="{Binding Item3}">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnSelection" CommandParameter="{Binding Item4}" >
                                            </TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>

                                </Grid>

                            </ViewCell>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <!--Add Button-->
            <controls:FloatingActionButton AbsoluteLayout.LayoutBounds="1,1,AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional"
                                           HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                                           Clicked="AddItem_EventClick" Image="add.png" ButtonColor="#CDDC39"/>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>