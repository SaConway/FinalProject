    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MsorLi.Views.SearchPage"
    Title="Search">
	<ContentPage.Content>

          <StackLayout Orientation="Vertical">
            
            <StackLayout Orientation = "Horizontal" >        
                <Label Text="Search:"/>
